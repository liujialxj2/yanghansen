{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "启动开发环境",
      "type": "shell",
      "command": "${workspaceFolder}/start-dev.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^=== 启动杨瀚森官方网站开发环境 ===",
          "endsPattern": "^=== 服务已启动 ==="
        }
      }
    },
    {
      "label": "停止开发环境",
      "type": "shell",
      "command": "pkill -f 'node app.js' || true; pkill -f 'astro dev' || true",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "重启开发环境",
      "dependsOn": ["停止开发环境", "启动开发环境"],
      "dependsOrder": "sequence"
    }
  ]
} 