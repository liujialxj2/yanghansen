---
import { languages } from "i18next";
import { localizePath } from "astro-i18next";

// 获取当前页面路径
const currentPath = new URL(Astro.request.url).pathname;

// 获取当前语言
const currentLanguage = Astro.url.pathname.startsWith('/en/') ? 'en' : 'zh';

// 语言列表
const langs = [
  { code: 'zh', name: '中文', icon: '🇨🇳' },
  { code: 'en', name: 'English', icon: '🇺🇸' }
];
---

<div class="language-switcher">
  <div class="dropdown is-hoverable is-right">
    <div class="dropdown-trigger">
      <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
        <span>
          {currentLanguage === 'zh' ? '中文' : 'English'}
        </span>
        <span class="icon is-small">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </button>
    </div>
    <div class="dropdown-menu" id="dropdown-menu" role="menu">
      <div class="dropdown-content">
        {langs.map((lang) => (
          <a 
            href={localizePath(currentPath, lang.code)} 
            class={`dropdown-item ${currentLanguage === lang.code ? 'is-active' : ''}`}
          >
            <span class="mr-2">{lang.icon}</span>
            {lang.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .language-switcher .button {
    border: none;
    background: transparent;
}

  .language-switcher .button:hover {
  background-color: rgba(255, 255, 255, 0.1);
}
</style> 