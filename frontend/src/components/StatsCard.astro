---
// 统计数据卡片组件
// 用于在主页和职业生涯页面展示关键统计数据

import { getLangInfo, formatLocalizedNumber } from '../lib/multilingual';

// 获取组件参数
const {
  statValue,
  statLabel,
  statUnit = "",
  statIcon = "chart-line",
  iconColor = "#E03A3E",
  locale = "zh"
} = Astro.props;

// 获取当前语言
const { lang } = getLangInfo(Astro.url);

const formattedValue = formatLocalizedNumber(statValue, locale);

// 趋势箭头方向和颜色
let trendIcon = '';
let trendClass = '';

if (trend === 'up') {
  trendIcon = 'fa-arrow-up';
  trendClass = 'has-text-success';
} else if (trend === 'down') {
  trendIcon = 'fa-arrow-down';
  trendClass = 'has-text-danger';
} else {
  trendIcon = 'fa-arrows-left-right';
  trendClass = 'has-text-grey';
}

// 颜色映射
const colorClass = {
  primary: 'is-primary',
  success: 'has-text-success',
  info: 'has-text-info',
  warning: 'has-text-warning',
  danger: 'has-text-danger'
}[color] || 'is-primary';
---

<div class="stat-card">
  <div class="stat-icon" style={`color: ${iconColor};`}>
    <i class={`fas fa-${statIcon}`}></i>
  </div>
  <div class="stat-content">
    <div class="stat-value">
      {formattedValue}
      {statUnit && <span class="stat-unit">{statUnit}</span>}
    </div>
    <div class="stat-label">{statLabel}</div>
  </div>
</div>

<style>
.stat-card {
  background-color: var(--color-bg-light);
  border-radius: 8px;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1.5rem;
  height: 100%;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.stat-icon {
  font-size: 2rem;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(224, 58, 62, 0.1);
  border-radius: 50%;
  flex-shrink: 0;
}

.stat-content {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-family: var(--font-heading);
  font-weight: 800;
  font-size: 2rem;
  line-height: 1.1;
  color: var(--color-white);
  margin-bottom: 0.25rem;
}

.stat-unit {
  font-size: 1.2rem;
  opacity: 0.8;
  margin-left: 0.25rem;
}

.stat-label {
  color: var(--color-gray);
  font-size: 0.95rem;
}

@media screen and (max-width: 768px) {
  .stat-card {
    padding: 1.2rem;
    gap: 1rem;
  }
  
  .stat-icon {
    width: 45px;
    height: 45px;
    font-size: 1.5rem;
  }
  
  .stat-value {
    font-size: 1.75rem;
  }
  
  .stat-label {
    font-size: 0.85rem;
  }
}
</style> 