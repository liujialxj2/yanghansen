---
import { getLocalizedContent as t, localizePath } from "../lib/multilingual.js";
---

<footer class="footer">
  <div class="container">
    <div class="columns is-multiline">
      <!-- Logo和简介 -->
      <div class="column is-4">
        <div class="footer-brand">
          <a href={localizePath("/")}>
            <img src="/images/logo.svg" alt="Hansen Yang Logo" />
          </a>
        </div>
        <div class="footer-description mt-4">
          <p>{t("footer.description")}</p>
        </div>
        <div class="social-icons mt-5">
          <a href="https://weibo.com/" target="_blank" rel="noopener noreferrer" aria-label="Weibo">
            <i class="fab fa-weibo"></i>
          </a>
          <a href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="https://twitter.com/" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
            <i class="fab fa-twitter"></i>
          </a>
        </div>
      </div>
      
      <!-- 快速链接 -->
      <div class="column is-2">
        <div class="footer-title">{t("footer.links")}</div>
        <ul class="footer-links">
          <li><a href={localizePath("/about")}>{t("nav.about")}</a></li>
          <li><a href={localizePath("/career")}>{t("nav.career")}</a></li>
          <li><a href={localizePath("/news")}>{t("nav.news")}</a></li>
          <li><a href={localizePath("/videos")}>{t("nav.videos")}</a></li>
          <li><a href={localizePath("/fanzone")}>{t("nav.fanzone")}</a></li>
        </ul>
      </div>
      
      <!-- 其他链接 -->
      <div class="column is-2">
        <div class="footer-title">{t("footer.more")}</div>
        <ul class="footer-links">
          <li><a href={localizePath("/media")}>{t("footer.media")}</a></li>
          <li><a href={localizePath("/press")}>{t("footer.press")}</a></li>
          <li><a href={localizePath("/sponsors")}>{t("footer.sponsors")}</a></li>
          <li><a href={localizePath("/charity")}>{t("footer.charity")}</a></li>
        </ul>
      </div>
      
      <!-- 联系信息 -->
      <div class="column is-4">
        <div class="footer-title">{t("footer.contact")}</div>
        <div class="contact-info">
          <span class="icon"><i class="fas fa-envelope"></i></span>
          <span>contact@hansenyang.com</span>
        </div>
        <div class="contact-info">
          <span class="icon"><i class="fas fa-phone"></i></span>
          <span>+86 123 456 7890</span>
        </div>
        <div class="contact-info">
          <span class="icon"><i class="fas fa-map-marker-alt"></i></span>
          <span>{t("footer.address")}</span>
        </div>
        <div class="newsletter-signup mt-4">
          <div class="footer-title is-smaller">{t("footer.newsletter")}</div>
          <div class="field has-addons">
            <div class="control is-expanded">
              <input class="input" type="email" placeholder={t("footer.email_placeholder")}>
            </div>
            <div class="control">
              <button class="button is-primary">
                {t("footer.subscribe")}
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 版权信息 -->
    <div class="footer-bottom">
      <div class="columns is-vcentered">
        <div class="column">
          <p>&copy; {new Date().getFullYear()} Hansen Yang. {t("footer.rights")}</p>
        </div>
        <div class="column has-text-right is-hidden-mobile">
          <ul class="footer-legal">
            <li><a href={localizePath("/privacy")}>{t("footer.privacy")}</a></li>
            <li><a href={localizePath("/terms")}>{t("footer.terms")}</a></li>
            <li><a href={localizePath("/sitemap")}>{t("footer.sitemap")}</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-dark);
    border-top: 1px solid var(--color-bg-light);
    padding: 4rem 1.5rem 2rem;
    color: var(--color-gray);
  }
  
  .footer-brand img {
    max-height: 40px;
    width: auto;
  }
  
  .footer-title {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 1.5rem;
  }
  
  .footer-title.is-smaller {
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }
  
  .footer-description {
    color: var(--color-gray);
    font-size: 0.95rem;
    line-height: 1.6;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  
  .footer-links a {
    color: var(--color-gray);
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }
  
  .footer-links a:hover {
    color: var(--color-primary);
  }
  
  .social-icons {
    display: flex;
    gap: 1rem;
  }
  
  .social-icons a {
    color: var(--color-gray);
    font-size: 1.5rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.05);
  }
  
  .social-icons a:hover {
    color: var(--color-white);
    background-color: var(--color-primary);
    transform: translateY(-3px);
  }
  
  .contact-info {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    color: var(--color-gray);
  }
  
  .contact-info .icon {
    margin-right: 0.75rem;
    color: var(--color-primary);
    width: 20px;
    text-align: center;
  }
  
  .newsletter-signup .input {
    background-color: rgba(255,255,255,0.1);
    border-color: rgba(255,255,255,0.1);
    color: var(--color-white);
  }
  
  .newsletter-signup .input::placeholder {
    color: rgba(255,255,255,0.5);
  }
  
  .newsletter-signup .input:focus {
    border-color: var(--color-primary);
    box-shadow: none;
  }
  
  .newsletter-signup .button {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
  }
  
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.9rem;
  }
  
  .footer-legal {
    display: flex;
    justify-content: flex-end;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer-legal li {
    margin-left: 1.5rem;
  }
  
  .footer-legal a {
    color: var(--color-gray);
    transition: color 0.3s ease;
  }
  
  .footer-legal a:hover {
    color: var(--color-primary);
  }
  
  @media screen and (max-width: 768px) {
    .footer {
      padding: 3rem 1rem 1.5rem;
    }
    
    .footer-title {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    
    .footer-bottom {
      text-align: center;
    }
    
    .column.is-4,
    .column.is-2 {
      width: 100%;
    }
    
    .social-icons {
      justify-content: center;
    }
    
    .footer-brand {
      text-align: center;
    }
    
    .footer-brand img {
      margin: 0 auto;
    }
  }
</style>

<script>
  // 加载Font Awesome图标
  document.addEventListener('DOMContentLoaded', () => {
    if (!document.querySelector('link[href*="font-awesome"]')) {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css';
    document.head.appendChild(link);
    }
  });
</script>
