---
import { t } from "i18next";

interface Props {
  page: any;
}

const { page } = Astro.props;
const currentYear = new Date().getFullYear();

// 社交媒体链接
const socialLinks = [
  { icon: "fab fa-weibo", url: "https://weibo.com/hansenyang", label: "微博" },
  { icon: "fab fa-instagram", url: "https://instagram.com/hansenyangofficial", label: "Instagram" },
  { icon: "fab fa-twitter", url: "https://twitter.com/hansenyangNBA", label: "Twitter" },
  { icon: "fab fa-youtube", url: "https://youtube.com/hansenyang", label: "YouTube" }
];
---

<footer class="footer">
  <div class="container">
    <div class="columns">
      <div class="column is-4">
        <div class="footer-brand">
          <h2 class="title is-4">Hansen Yang</h2>
          <h3 class="subtitle is-5">杨瀚森</h3>
        </div>
        <p class="mt-4">{t("footer.description")}</p>
      </div>
      
      <div class="column is-4">
        <h4 class="title is-5">{t("footer.quickLinks")}</h4>
        <ul class="footer-links">
          <li><a href="/">{t("nav.home")}</a></li>
          <li><a href="/about">{t("nav.about")}</a></li>
          <li><a href="/career">{t("nav.career")}</a></li>
          <li><a href="/articles">{t("nav.news")}</a></li>
          <li><a href="/videos">{t("nav.videos")}</a></li>
          <li><a href="/fan-zone">{t("nav.fanZone")}</a></li>
        </ul>
      </div>
      
      <div class="column is-4">
        <h4 class="title is-5">{t("footer.followMe")}</h4>
        <div class="social-icons">
          {socialLinks.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.label}>
              <span class="icon is-medium">
                <i class={link.icon}></i>
              </span>
            </a>
          ))}
        </div>
        
        <div class="mt-5">
          <p class="has-text-grey">
            <i class="fas fa-envelope mr-2"></i>
            <a href="mailto:contact@hansenyang.com">contact@hansenyang.com</a>
          </p>
              </div>
          </div>
    </div>

    <hr />
    
    <div class="columns">
      <div class="column has-text-centered">
        <p class="copyright">
          &copy; {currentYear} Hansen Yang. {t("footer.copyright")}
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #111111;
    color: #f5f5f5;
    padding: 3rem 1.5rem;
  }
  
  .footer-brand {
      margin-bottom: 1rem;
    }

  .footer-links {
      list-style: none;
      padding: 0;
      margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    color: #f5f5f5;
      }

  .footer-links a:hover {
    color: #E03A3E;
  }
  
  .social-icons {
      display: flex;
      gap: 1rem;
    margin-top: 1rem;
    }

  .social-icons a {
    color: #f5f5f5;
    transition: color 0.2s ease;
      }

  .social-icons a:hover {
    color: #E03A3E;
      }

  .copyright {
    font-size: 0.9rem;
    color: #888;
  }
</style>
