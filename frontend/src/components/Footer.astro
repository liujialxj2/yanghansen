---
import { getLocalizedContent as t, localizePath } from "../lib/multilingual.js";

const { aposData } = Astro.props;
const { footerGroup: footer = {}, brandingGroup: branding = {} } =
  aposData.global || {};
const currentYear = new Date().getFullYear();
const footerNav = aposData.home?._children || [];

// Social platform icons mapping
const platformIcons = {
  facebook: 'facebook',
  twitter: 'x-twitter',
  instagram: 'instagram',
  linkedin: 'linkedin',
  youtube: 'youtube',
  github: 'github',
  tiktok: 'tiktok',
  pinterest: 'pinterest',
  discord: 'discord',
  mastodon: 'mastodon'
} as const;

// Get theme-based classes
const footerClasses = [
  'footer-modern',
  footer.footerBackgroundColor
    ? `has-background-${footer.footerBackgroundColor}`
    : '',
  footer.footerTextColor ? `has-text-${footer.footerTextColor}` : '',
  footer.footerLayout ? `layout-${footer.footerLayout}` : 'layout-grid'
]
  .filter(Boolean)
  .join(' ');

const linkClasses = [
  `has-text-${footer.footerLinkColor || 'grey-light'}`,
  'hover-fade'
].join(' ');

// Extract footer sections
const footerSections = footer.footerSections || [];

// Get link attributes for external links
const getLinkAttributes = (url: string, openInNewTab?: boolean) => ({
  ...(openInNewTab || url.startsWith('http')
    ? {
        target: '_blank',
        rel: 'noopener noreferrer'
      }
    : {})
});

const socialPosition = footer.socialPosition || 'top';
const { renderBranding } = useSiteConfig(aposData.global);
---

<footer class="footer">
  <div class="container">
    <div class="columns is-multiline">
      <div class="column is-4">
        <div class="footer-brand">
          <a href={localizePath("/")}>
            <img src="/images/logo.svg" alt="Hansen Yang Logo" width="180" />
          </a>
          <p class="mt-4">
            {t("footer.description")}
          </p>
        </div>
        <div class="social-icons mt-4">
          <a href="https://weibo.com/" target="_blank" rel="noopener noreferrer" aria-label="Weibo">
            <span class="icon"><i class="fab fa-weibo"></i></span>
          </a>
          <a href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <span class="icon"><i class="fab fa-instagram"></i></span>
          </a>
          <a href="https://twitter.com/" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
            <span class="icon"><i class="fab fa-twitter"></i></span>
          </a>
          <a href="https://www.youtube.com/" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
            <span class="icon"><i class="fab fa-youtube"></i></span>
          </a>
        </div>
      </div>
      
      <div class="column is-2">
        <h3 class="footer-title">{t("footer.navigation")}</h3>
        <ul class="footer-links">
          <li><a href={localizePath("/")}>{t("nav.home")}</a></li>
          <li><a href={localizePath("/about")}>{t("nav.about")}</a></li>
          <li><a href={localizePath("/career")}>{t("nav.career")}</a></li>
          <li><a href={localizePath("/news")}>{t("nav.news")}</a></li>
          <li><a href={localizePath("/videos")}>{t("nav.videos")}</a></li>
          <li><a href={localizePath("/fanzone")}>{t("nav.fanzone")}</a></li>
        </ul>
      </div>
      
      <div class="column is-3">
        <h3 class="footer-title">{t("footer.more")}</h3>
        <ul class="footer-links">
          <li><a href={localizePath("/media")}>{t("footer.media")}</a></li>
          <li><a href={localizePath("/contact")}>{t("footer.contact")}</a></li>
          <li><a href={localizePath("/privacy")}>{t("footer.privacy")}</a></li>
          <li><a href={localizePath("/terms")}>{t("footer.terms")}</a></li>
        </ul>
      </div>
      
      <div class="column is-3">
        <h3 class="footer-title">{t("footer.contact_us")}</h3>
        <p class="contact-info">
          <span class="icon"><i class="fas fa-envelope"></i></span>
          <a href="mailto:info@hansenyang.com">info@hansenyang.com</a>
        </p>
        <p class="contact-info">
          <span class="icon"><i class="fas fa-phone"></i></span>
          <span>+86 xxx xxxx xxxx</span>
        </p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>© 2025 {t("footer.copyright")}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-dark);
    border-top: 1px solid var(--color-bg-light);
    padding: 4rem 1.5rem 2rem;
    color: var(--color-gray);
  }
  
  .footer-brand img {
    max-height: 40px;
    width: auto;
  }
  
  .footer-title {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 1.5rem;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  
  .footer-links a {
    color: var(--color-gray);
    transition: color 0.3s ease;
  }
  
  .footer-links a:hover {
    color: var(--color-primary);
  }
  
  .social-icons {
    display: flex;
    gap: 1rem;
  }
  
  .social-icons a {
    color: var(--color-gray);
    font-size: 1.5rem;
    transition: color 0.3s ease;
  }
  
  .social-icons a:hover {
    color: var(--color-primary);
  }
  
  .contact-info {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .contact-info .icon {
    margin-right: 0.5rem;
    color: var(--color-primary);
  }
  
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    font-size: 0.9rem;
  }
  
  @media screen and (max-width: 768px) {
    .footer {
      padding: 3rem 1rem 1.5rem;
    }
    
    .footer-title {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    
    .column.is-4,
    .column.is-2,
    .column.is-3 {
      width: 100%;
    }
  }
</style>

<script>
  // 加载Font Awesome图标
  document.addEventListener('DOMContentLoaded', () => {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css';
    document.head.appendChild(link);
  });
</script>
