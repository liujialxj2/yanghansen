---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangInfo } from '../../lib/multilingual';

const { lang } = getLangInfo(Astro.url);
const title = 'Home';
---

<BaseLayout title={title}>
  <div class="hero is-fullheight-with-navbar has-hansenyoung-gradient">
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title is-1">Hansen Yang Official Website</h1>
        <h2 class="subtitle is-3">Chinese Basketball Star, Portland Trail Blazers Player</h2>
        <div class="mt-5">
          <a href="/en/about" class="button is-light is-large">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <section class="section">
    <div class="container">
      <h2 class="title is-2 has-text-centered mb-6">
        Welcome to Hansen Yang Official Website
      </h2>
      <div class="content has-text-centered">
        <p class="is-size-5">
          The website is under construction. Stay tuned for more content.
        </p>
      </div>
    </div>
  </section>
</BaseLayout> 